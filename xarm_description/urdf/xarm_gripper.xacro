<?xml version="1.0"?>
<!-- PhantomX Pincher gripper URDF-->
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="M_PI" value="3.14159"/>
  <!--material name="Gray">
    <color rgba="0.2 0.2 0.21 1.0"/-->

  <xacro:macro name="xarm_finger" params="name *origin">
    <link name="${name}">
      <inertial>
        <!-- TODO: This inertial field needs doesn't contain reliable data!! -->
        <mass value="0.01"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.000001" ixy="0.0" ixz="0.0"
                 iyy="0.000001" iyz="0.0"
                 izz="0.000001"/>
      </inertial>
      <visual>
        <xacro:insert_block name="origin"/>
        <geometry>
          <mesh filename="package://xarm_description/meshes/stls/right_finger-90.stl" scale=".001 .001 .001"/>
        </geometry>
        <material name="blue">
	  <color rgba="0.3 0.5 0.9 1.0"/>
        </material>
      </visual>
      <collision>
        <xacro:insert_block name="origin"/>
        <geometry>
          <mesh filename="package://xarm_description/meshes/stls/right_finger-90.stl" scale=".001 .001 .001"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

    <!-- gripper joint -->
    <!-- Finger 1 --> 
  <joint name="xarm_1_joint" type="prismatic">
    <origin xyz="0 0 0.070" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="30" velocity="0.5" lower="0" upper="1"/>
    <parent link="xarm_1_link"/>
    <child link="dummy_gripper_link"/>
  </joint>

  <link name="dummy_gripper_link" />

  <joint name="xarm_tip1_joint" type="prismatic">
    <origin xyz="0 0 0.070" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="30" velocity="0.5" lower="0" upper="1" />
    <parent link="xarm_1_link"/>
    <child link="xarm_gripper_tip1"/>
    <mimic joint="xarm_1_joint" multiplier="0.028"  offset = "0"/>    
  </joint>

  <xacro:xarm_finger name="xarm_gripper_tip1" >
      <origin xyz="0 0.012 -.035" rpy="${M_PI/2} 0 0"/>
  </xacro:xarm_finger>
     
    <!-- Finger 2 --> 
    <!-- Note: currently static but should be a Mimic of Finger 1 -->
  <joint name="xarm_tip2_joint" type="prismatic">
    <origin xyz="0 0 0.070" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>    
    <limit effort="30" velocity="0.5" lower="-1" upper="0" />    
    <parent link="xarm_1_link"/>
    <child link="xarm_gripper_tip2"/>
    <mimic joint="xarm_1_joint" multiplier="-0.028"  offset = "0"/>    
  </joint>  
    
  <xacro:xarm_finger name="xarm_gripper_tip2" >
    <origin xyz="0 0 -.035" rpy="${-M_PI/2} ${M_PI} 0"/>
  </xacro:xarm_finger>

</robot>
