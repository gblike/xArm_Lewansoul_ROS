      <limit effort="30" velocity="0.5" lower="-0.016" upper="-0.002"/>
      <parent link="arm_wrist_flex_link"/>
      <child link="gripper_active2_link"/>
      <mimic joint="gripper_joint" multiplier="-1"  offset = "0"/>
    </joint-->  
</robot>
